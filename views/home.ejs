<%- include('./partials/header') -%>
    <a href="/compose" class="btn btn-primary"><span class="plus"><i class="fa-solid fa-plus"></i></span>Add New Post</a>
    <h1>Home</h1>
    <p>
        <% if (locals.content) { %>
            <%= content  %>
        <% } %>
    </p>
    <% if (locals.posts) { 
        posts.forEach((post)=> {
    %>
            <a href="/post/<%= post.title %>"><h1><%= post.title %></h1></a>
            <p class="post-descripton">
                <%= post.description %>
            </p>
    <% });
    } %>
<%- include('./partials/footer') -%>